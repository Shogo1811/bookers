<h1>編集画面</h1>
<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  <h4>本文</h4>
  <%= f.text_area :body %>
  <div class="actions">
    <input type="submit" name="commit" value="Update Book" data-disable-with="pdate Book Book" />
  </div>
<% end %>

<%= link_to "Show", book_path(@book) %>|<%= link_to "Back", books_path %>